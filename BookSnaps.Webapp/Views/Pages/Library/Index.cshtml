@model int
@{
    ViewBag.Title = "Biblioteca";
    Layout = "_Layout";
}

<div class="mt-8 flex flex-row justify-between items-center flex-wrap ">
    <div class="ms-4 w-full sm:w-auto">
        <h1 class="text-3xl font-bold text-">Minha Biblioteca</h1>
        <p class="text-secondary text-base">@Model livros cadastrados</p>
    </div>
    <button onclick="window.location.href='@Url.Action("AddBook", "Library")'" class="btn btn-primary mt-4 ml-auto me-4 sm:ml-0 sm:mt-0">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-white" width="24" height="24" viewBox="0 0 24 24"  stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
        Novo Livro
    </button> 
</div>

<div class="mt-8 px-4">
    <label class="input w-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-primary" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
        <input id="search-books" class="input-lg bg-white" type="search" required placeholder="Search"/>
    </label>
</div>

<div id="library" class="px-4">
    <div class="mb-4"></div>
    <div id="loading" class="flex flex-row justify-center hidden">
        <span class="loading loading-spinner loading-xl w-12 mt-8"></span>
    </div>
    <section id="result" >
        @await Component.InvokeAsync("BookList", new { search = "" })
    </section>
    
    <div id="scroll-btn" class="fab fixed bottom-1/12 right-1/12 hidden sm:hidden">
        <button class="btn btn-lg btn-circle btn-primary">
            <svg viewBox="0 0 24 24" class="fill-white" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M12 3C12.2652 3 12.5196 3.10536 12.7071 3.29289L19.7071 10.2929C20.0976 10.6834 20.0976 11.3166 19.7071 11.7071C19.3166 12.0976 18.6834 12.0976 18.2929 11.7071L13 6.41421V20C13 20.5523 12.5523 21 12 21C11.4477 21 11 20.5523 11 20V6.41421L5.70711 11.7071C5.31658 12.0976 4.68342 12.0976 4.29289 11.7071C3.90237 11.3166 3.90237 10.6834 4.29289 10.2929L11.2929 3.29289C11.4804 3.10536 11.7348 3 12 3Z" ></path> </g></svg>
        </button>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            let $scrollBtn = $("#scroll-btn");
            let $search = $("#search-books");
            let timeout = null;

            
            $(window).scroll(function () {
                if ($search.offset().top + $search.outerHeight() < $(window).scrollTop()) {
                    $scrollBtn.fadeIn();
                } else {
                    $scrollBtn.fadeOut();
                }
            })

            $scrollBtn.click(function () {
                $("html, body").animate({scrollTop: 0}, 500);
            });

            $search.on("input", function () {
                clearTimeout(timeout);
                $("#book-grid").hide();
                $("#notfound").addClass("hidden");
                $("#loading").removeClass("hidden");

                const search = $(this).val();

                timeout = setTimeout(function () {
                    searchBooks(search);
                }, 1500);
            });

            function searchBooks(search) {
                $.ajax({
                    url: "Library/Grid/",
                    type: "GET",
                    data: {search: search},
                    success: function (data) {
                        $("#result").html(data);
                    },
                    error: function (data) {
                        console.log(data);
                    },
                    complete: function () {
                        $("#loading").addClass("hidden");
                    }
                })
            }
           
       }) 
    </script>
}